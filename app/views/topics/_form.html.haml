= form_for @topic, :html => { :class => 'form-horizontal' } do |f|
  - @topic.errors.full_messages.each do |error|
    %br
    = error
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_field'
  .control-group
    = f.label :proposed_date, :class => 'control-label'
    .controls
      = f.date_field :proposed_date, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), topics_path, :class => 'btn'
